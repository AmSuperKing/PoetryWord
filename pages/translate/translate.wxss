/* 文本框 */
.txt{
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #07c160;
  border-radius: 10rpx;
  /* box-sizing: border-box; */
  margin: 0 20rpx;
}
.text{
  width: 100%;
  padding: 10rpx 20rpx;
  margin: 0 auto;
  color: #7c7c7c;
  font-size: 30rpx;
}

/* 文本框提示语 */
.tips{
  color: #bfbfbf;
  font-size: 28rpx;
  margin-left: 20rpx;
}
/* 翻译选择按钮 */
.select_btns{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 10rpx;
  white-space: nowrap;
}

.select_box{
  width:50%;
  height:100%;
  display: flex;
  border: 2rpx solid #07c160;
  border-radius: 4rpx;
  position: relative;
  margin: 10rpx 6rpx;
}

.from_to_picker{
  border: 2rpx solid #07c160;
  font-size: 32rpx;
  color: #07c160;
  margin: 20rpx 40rpx;
  padding: 10rpx 20rpx;
  width: 100rpx;
  text-align: center;
  border-radius: 10rpx;
}

