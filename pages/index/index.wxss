/**index.wxss**/

page{
  width: 100%;
  height:100%;
}
.page{
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: relative;
}

/* 今日诗词 */
.rec{
  width: 626rpx;
  height: 600rpx;
  background-color: rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: relative;
  border-radius: 2%;
  box-shadow: 0 0 4rpx 4rpx rgb(122, 122, 122);
}
.rec_img{
  width: 618rpx;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  position: absolute;
  top:8rpx;
}
.rec_word{
  width: 100%;
  height: 180rpx;
  position: absolute;
  bottom: 0;
  background-color: #ffffff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.content{
  text-align: left;
  font-size: 30rpx;
  color: rgb(121, 121, 121);
  font-weight: bold;
  padding: 26rpx 18rpx;
}
.matchtag{
  display: flex;
  justify-content: start; 
  flex-direction: row;
  font-size: 28rpx;
  color: rgb(66, 66, 66);
}
.keyword{
  margin-left: 12rpx;
  padding:4rpx 6rpx;
  color: #cccccc;
}

.next_btn{
  position: absolute;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #07c160;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.next_btn:active{
  background-color: #07c160;
}
.next_btn_img{
  width: 60rpx;
  height: 60rpx;
}

